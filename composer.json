{
    "name": "alexandergknoll/php-boilerplate",
    "description": "A boilerplate for PHP site development using Slim Framework, Webpack and Bootstrap",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/alexandergknoll",
    "authors": [
        {
            "name": "Alex Knoll",
            "email": "alex@agk.io"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "~3.12.4",
        "slim/php-view": ">=2.0",
        "monolog/monolog": ">=1.17",
        "slim/twig-view": ">=2.4",
        "vlucas/phpdotenv": ">=2.5",
        "google/recaptcha": ">=1.2"
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 127.0.0.1:8000 -t public"
    }

}
